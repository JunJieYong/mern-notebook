{
  "name": "mern-notebook",
  "version": "1.0.0",
  "description": "",
  "main": "build/server.js",
  "scripts": {
    "start": "node .",
    "start-client": "npm start --prefix client",
    "build-client": "npm run build --prefix client",
    "dev-client": "npm run dev --prefix client",
    "dev-server": "concurrently -i -n \"tsc,node\" --default-input-target node \"tsc -w --preserveWatchOutput\"  \"nodemon . -d 3 -w ./build\"",
    "dev": "concurrently -i npm:dev-server npm:dev-client",
    "prod": "concurrently tsc npm:build-client",
    "data:reset": "tsc && node build/dataSeeder",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run prod && NPM_CONFIG_PRODUCTION=true"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.13",
    "crypto-js": "^4.1.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.0.8",
    "uuid": "^8.3.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/uuid": "^8.3.1",
    "concurrently": "^6.3.0",
    "nodemon": "^2.0.12",
    "typescript": "^4.4.3"
  }
}
